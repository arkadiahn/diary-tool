{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "ignore": ["node_modules", ".next", "apps/backend", "dist"],
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off"
            }
        }
    },
    "formatter": {
        "ignore": ["node_modules", ".next", "apps/backend", "dist"],
        "indentStyle": "space",
        "indentWidth": 4
    }
}
