{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": ["**/.env"],
    "ui": "stream",
    "tasks": {
        "topo": {
            "dependsOn": ["^topo"]
        },
        "build": {
            "env": [
				"FRONTEND_URL",
				"BACKEND_URL",
				"AUTH_URL",
				"TOP_LEVEL_DOMAIN",
				"SESSION_COOKIE_NAME",
				"KEYCLOAK_SECRET",
				"KEYCLOAK_CLIENT_ID",
				"KEYCLOAK_ISSUER",
				"COOKIE_DOMAIN"
			],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "next-env.d.ts",
                ".expo/**",
                "dist/**"
            ]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": ["^topo"]
        },
        "typecheck": {
            "dependsOn": ["^topo"],
            "outputs": ["./node_modules/.cache/tsbuildinfo.json"]
        }
    }
}
