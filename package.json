{
    "name": "@arkadia/openspace",
    "private": true,
    "workspaces": ["packages/*", "apps/*"],
    "scripts": {
        "clean": "git clean -xdf node_modules .turbo",
        "clean:workspaces": "turbo clean",
        "clean:all": "bun clean:workspaces && bun clean",
        "lint": "turbo lint",
        "lint:repo": "bunx sherif@latest",
        "lint:repo:fix": "bunx sherif@latest --fix",
        "format": "biome format --write .",
        "typecheck": "turbo typecheck",
        "checkall": "bun format && bun lint && bun typecheck && bun lint:repo",
        "dev": "turbo dev --parallel",
        "dev:cnauth": "turbo dev --filter=@arkadia/cnauth",
        "dev:frontend": "turbo dev --filter=@arkadia/frontend",
        "dev:portal": "turbo dev --filter=@arkadia/portal",
        "build": "turbo build",
        "build:cnauth": "turbo build --filter=@arkadia/cnauth",
        "build:frontend": "turbo build --filter=@arkadia/frontend",
        "build:portal": "turbo build --filter=@arkadia/portal"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2"
    },
    "packageManager": "bun@1.1.38"
}
